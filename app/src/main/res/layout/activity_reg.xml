<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:scaleType="centerInside"
        android:src="@drawable/login_logo" />

    <!--
    <TextView
        android:gravity="center"
        android:id="@+id/feedback_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/aliwx_color_blue"
        android:textSize="15sp"
        android:text="反馈入口"
        android:padding="10dp"
        android:layout_alignParentRight="true" />
-->

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo">

        <EditText
            android:id="@+id/username"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dip"
            android:background="@null"
            android:gravity="center"
            android:hint="用户名/手机号"
            android:inputType="textEmailSubject"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/nav_hint_bg"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="225dp"
            android:layout_height="10dp"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/login_edit_bg" />

        <EditText
            android:id="@+id/password"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dip"
            android:background="@null"
            android:gravity="center"
            android:hint="密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/nav_hint_bg"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="225dp"
            android:layout_height="10dp"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/login_edit_bg" />

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dip"
            android:background="@null">

            <EditText
                android:id="@+id/fullname"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:gravity="center"
                android:hint="真实姓名"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/nav_hint_bg"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/line3"
                android:layout_width="132dp"
                android:layout_height="6dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/fullname"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/login_edit_bg_short" />

            <ImageView
                android:id="@+id/female"
                android:layout_width="36dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_female_normal" />

            <ImageView
                android:id="@+id/male"
                android:layout_width="36dp"
                android:layout_height="27dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/female"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_male_normal"

                />
        </RelativeLayout>

        <EditText
            android:id="@+id/city"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dip"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入城市名"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/nav_hint_bg"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/line4"
            android:layout_width="225dp"
            android:layout_height="10dp"
            android:layout_below="@+id/city"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/login_edit_bg" />

        <ImageView
            android:id="@+id/reg_btn"
            android:layout_width="225dp"
            android:layout_height="30dp"
            android:layout_below="@+id/line4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dip"
            android:scaleType="fitCenter"
            android:src="@drawable/reg_enter_no" />

        <RelativeLayout
            android:id="@+id/check_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@null">

            <ImageView
                android:id="@+id/checkbox"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_uncheck" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/checkbox"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="我已阅读并接受"
                android:textColor="@color/white"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="版权声明"
                android:textColor="@color/nav_font_green_bg"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="和"
                android:textColor="@color/white"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="隐私保护"
                android:textColor="@color/nav_font_green_bg"
                android:textSize="8sp" />
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/text4"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="条款"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/copy_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/login_icon" />

    </RelativeLayout>

</RelativeLayout>