    <!--</RelativeLayout>-->


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#0DAAA9"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#77ffaabb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText android:id="@+id/login_username_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edt_height"
                android:layout_marginTop="@dimen/login_layout_margin_top"
                android:layout_marginLeft="@dimen/login_edt_margin_left"
                android:layout_marginRight="@dimen/login_edt_margin_right"
                android:singleLine="true"
                android:maxLength="30"
                android:background="#000000"
                android:drawablePadding="5dp"
                android:hint="请输入用户名"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColorHint="#d2d2d2" />

            <EditText android:id="@+id/login_pwd_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edt_height"
                android:layout_marginLeft="@dimen/login_edt_margin_left"
                android:layout_marginRight="@dimen/login_edt_margin_right"
                android:layout_marginTop="@dimen/login_edt_margin_top"
                android:layout_below="@+id/login_username_edt"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="30"
                android:background="#000000"
                android:drawablePadding="5dp"
                android:hint="请输入密码"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:textColorHint="#d2d2d2"/>





            <Button android:id="@+id/login_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edt_height"
                android:layout_marginLeft="@dimen/login_edt_margin_left"
                android:layout_marginRight="@dimen/login_edt_margin_right"
                android:layout_marginTop="45dp"
                android:background="#000000"
                android:textColor="@android:color/white"
                android:text="登录"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView android:id="@+id/hide_server_settings"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000"
            android:layout_gravity="center_horizontal|bottom"

            android:layout_marginBottom="80dp"
            />
    </FrameLayout>


